<div class="container mb-3">
  <form action="/nip/">
    <div class="input-group mb-3">
      <input
        type="text"
        class="form-control"
        name="nipInput"
        placeholder="NIP"
        aria-label="NIP number"
        aria-describedby="button-addon2"
      />
      <div class="input-group-append">
        <button type="submit" class="btn btn-outline-secondary">
          Check NIP
        </button>
      </div>
    </div>
  </form>
  <form
    class="was-validated mb-3"
    action="/"
    method="post"
    enctype="multipart/form-data"
  >
    <div class="custom-file mb-3">
      <input
        type="file"
        class="custom-file-input"
        id="validatedCustomFile"
        required
      />
      <label class="custom-file-label" for="validatedCustomFile">
        Choose file...
      </label>
      <div class="invalid-feedback"></div>
    </div>
  </form>
  <form class="mb-3" action="/" method="post" enctype="multipart/form-data">
    <div class="card card-body">
      <input type="file" name="filename" class="mb-3" />
      <input type="submit" value="Upload" class="btn btn-outline-secondary" />
    </div>
  </form>
  <div class="card card-body">
    <a href="/getData" class="btn btn-dark btn-block">
      Refresh data
    </a>
  </div>
</div>
<div class="input-group">
  <div class="input-group-prepend">
    <span class="input-group-text" id="inputGroupFileAddon01">
      Upload
    </span>
  </div>
  <div class="custom-file">
    <input
      type="file"
      class="custom-file-input"
      id="inputGroupFile01"
      aria-describedby="inputGroupFileAddon01"
    />
    <label class="custom-file-label" for="inputGroupFile01">
      Choose file
    </label>
  </div>
</div>